# Test-focused Dockerfile for running tests
FROM python:3.11-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    DEBUG=true

# Set work directory
WORKDIR /app

# Install system dependencies
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        build-essential \
        curl \
        sqlite3 \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY api/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY api/ .

# Set PYTHONPATH after copying code
ENV PYTHONPATH=/app

# Copy pytest configuration
COPY api/pytest.ini ./

# Copy and make test runner script executable
COPY api/test_runner.sh /app/test_runner.sh
RUN chmod +x /app/test_runner.sh

# Override entrypoint and set command to run tests
ENTRYPOINT []
CMD ["/app/test_runner.sh"]
